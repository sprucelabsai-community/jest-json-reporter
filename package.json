{
  "name": "@sprucelabs/jest-sheets-reporter",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build"
  ],
  "version": "1.0.0",
  "main": "./build/SheetsReporter.js",
  "types": "./build/SheetsReporter.d.ts",
  "description": "Have your Jest tests update a Google Spreadsheetâ„¢Â®Â©. ðŸ“¡",
  "keywords": [
    "node",
    "components",
    "sprucebot",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/jest-sheets-reporter",
  "bugs": {
    "url": "https://github.com/sprucelabsai/jest-sheets-reporter/issues"
  },
  "scripts": {
    "build": "yarn run clean && yarn run build.ts",
    "build.ts": "tsc",
    "build.watch": "chokidar src/* -c 'yarn run build'",
    "clean": "rm -rf build/",
    "lint": "eslint '**/*.ts' && tsc -p . --noEmit",
    "lint.fix": "eslint --fix '**/*.ts'",
    "test": "jest",
    "test.watch": "jest --watch",
    "arkit": "arkit -f index.ts -o docs/images/arkit.svg",
    "arkit.png": "arkit -f index.ts -o docs/images/arkit.png",
    "release": "semantic-release",
    "upgrade.packages": "yarn upgrade --latest && rm yarn.lock | true && yarn | true && yarn lint.fix | true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.base && yarn lint && yarn build && yarn test"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "google-spreadsheet": "^3.0.13"
  },
  "devDependencies": {
    "@sprucelabs/semantic-release": "^4.0.6",
    "@sprucelabs/test": "^7.1.2",
    "@types/google-spreadsheet": "^3.0.1",
    "arkit": "^1.6.4",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.11.0",
    "eslint-config-spruce": "^10.9.91",
    "jest": "^26.5.2",
    "jest-reporters": "^0.0.2",
    "prettier": "^2.1.2",
    "typescript": "^4.0.2"
  },
  "jest": {
    "testTimeout": 300000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/schemas/fields/(.*)": "<rootDir>/node_modules/@sprucelabs/schema/build/.spruce/schemas/fields/$1",
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}