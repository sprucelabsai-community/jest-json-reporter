{
  "name": "@sprucelabs/jest-json-reporter",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build"
  ],
  "version": "6.0.253",
  "main": "./build/JsonReporter.js",
  "types": "./build/JsonReporter.d.ts",
  "description": "Stream Jest results to stdout in JSON for ingestion by parent processes.",
  "keywords": [
    "jest",
    "json",
    "spruce",
    "sprucelabs"
  ],
  "homepage": "https://github.com/sprucelabsai/jest-json-reporter",
  "bugs": {
    "url": "https://github.com/sprucelabsai/jest-json-reporter/issues"
  },
  "scripts": {
    "build.ci": "yarn run build.tsc",
    "build.dev": "yarn run clean && yarn run build.tsc --sourceMap",
    "build.dist": "yarn run build.tsc",
    "build.tsc": "yarn build.copy-files && tsc",
    "clean": "yarn clean.build",
    "clean.all": "yarn clean.dependencies && yarn clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "rebuild": "yarn clean.all && yarn && yarn build.dev",
    "release": "semantic-release",
    "test": "jest",
    "update.dependencies": "yarn clean.dependencies && yarn",
    "upgrade.packages": "yarn-upgrade-all && rm -f yarn.lock ; yarn ; yarn fix.lint ; true",
    "upgrade.packages.all": "yarn install && yarn upgrade.packages",
    "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build.dev && yarn test",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn post.watch.build'",
    "watch.test": "jest --watch",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn build.copy-files && yarn build.resolve-paths",
    "resolve-paths.lint": "yarn build.resolve-paths ; yarn lint",
    "watch.lint": "concurrently 'yarn lint' \"chokidar 'src/**/*' -c 'yarn lint.tsc'\"",
    "watch.rebuild": "yarn clean.all && yarn && yarn watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {},
  "devDependencies": {
    "@jest/reporters": "^27.3.1",
    "@sprucelabs/resolve-path-aliases": "^1.0.231",
    "@sprucelabs/semantic-release": "^4.0.8",
    "@sprucelabs/test": "^7.7.237",
    "@types/node": "^16.11.10",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.3.0",
    "eslint-config-spruce": "^10.10.16",
    "jest": "^27.3.1",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "maxWorkers": 4,
    "testTimeout": 300000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/schemas/fields/(.*)": "<rootDir>/node_modules/@sprucelabs/schema/build/.spruce/schemas/fields/$1",
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
